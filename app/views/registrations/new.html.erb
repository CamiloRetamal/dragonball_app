<% content_for :page_title do %>
  Registro
<% end %>

<div class="text-center mb-8">
  <%= image_tag "dragon-ball-logo.png", class: "mx-auto h-16 w-auto", alt: "Dragon Ball Logo" %>
  <h2 class="mt-4 text-2xl font-bold text-gray-900 dark:text-white">
    Crear nueva cuenta
  </h2>
  <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
    Ingresa tus datos para registrarte
  </p>
</div>

<%= form_with(model: @user, 
            url: signup_path, 
            class: "space-y-6",
            data: { turbo: false },
            local: true,
            autocomplete: "off") do |f| %>
  <% if @user.errors.any? %>
    <div class="rounded-md bg-red-50 dark:bg-red-900/50 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            Se encontraron <%= pluralize(@user.errors.count, "error", "errores") %>:
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc pl-5 space-y-1">
              <% @user.errors.each do |error| %>
                <li><%= error.message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-1">
      <%= f.text_field :name,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm",
          placeholder: "Tu nombre",
          required: true,
          autocomplete: "off" %>
    </div>
  </div>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-1">
      <%= f.email_field :email,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm",
          placeholder: "tu@email.com",
          required: true,
          autocomplete: "off" %>
    </div>
  </div>

  <div class="mb-6" data-controller="password-validation password-toggle">
    <%= f.label :password, "Contraseña", class: "block text-sm font-medium text-gray-700 dark:text-gray-200" %>
    <div class="mt-1 relative">
      <%= f.password_field :password, 
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm pr-10",
          placeholder: "Ingresa tu contraseña",
          required: true,
          autocomplete: "new-password",
          data: { 
            password_validation_target: "input",
            action: "input->password-validation#validate",
            password_toggle_target: "input"
          } %>
      <button type="button" 
              class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-500 dark:hover:text-gray-300 focus:outline-none"
              data-action="click->password-toggle#toggle">
        <span data-password-toggle-target="icon">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </span>
      </button>
    </div>
    
    <div class="mt-2 text-sm text-gray-600 dark:text-gray-300">
      <p class="font-medium mb-1">Tu contraseña debe tener:</p>
      <ul class="list-disc list-inside space-y-1 text-xs">
        <li data-password-validation-target="requirement">Mínimo 8 caracteres</li>
        <li data-password-validation-target="requirement">Al menos una letra mayúscula</li>
        <li data-password-validation-target="requirement">Al menos una letra minúscula</li>
        <li data-password-validation-target="requirement">Al menos un número</li>
      </ul>
    </div>
  </div>

  <div data-controller="password-toggle">
    <%= f.label :password_confirmation, "Confirmar contraseña", class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-1 relative">
      <%= f.password_field :password_confirmation,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:text-white sm:text-sm pr-10",
          placeholder: "Repite tu contraseña",
          required: true,
          autocomplete: "new-password",
          data: { 
            action: "input->password-validation#validate",
            password_toggle_target: "input"
          } %>
      <button type="button" 
              class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-gray-500 dark:hover:text-gray-300 focus:outline-none"
              data-action="click->password-toggle#toggle">
        <span data-password-toggle-target="icon">
          <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
          </svg>
        </span>
      </button>
    </div>
  </div>

  <%= f.submit "Crear cuenta",
      class: "cursor-pointer w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200",
      data: { disable_with: "Creando cuenta..." } %>
<% end %>

<div class="mt-6">
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-400">
        ¿Ya tienes una cuenta?
      </span>
    </div>
  </div>

  <div class="mt-6 text-center">
    <%= link_to "Iniciar sesión", login_path,
        class: "font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
  </div>
</div> 