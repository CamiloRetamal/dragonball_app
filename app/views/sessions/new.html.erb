<% content_for :page_title do %>
  Análisis de Poder
<% end %>

<div class="text-center mb-8">
  <%= image_tag "dragon-ball-logo.png", class: "mx-auto h-16 w-auto", alt: "Dragon Ball Logo" %>
  <h2 class="mt-4 text-2xl font-bold text-gray-900 dark:text-white">
    Bienvenido a Dragon Ball Z
  </h2>
  <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
    Ingresa tus credenciales para continuar
  </p>
</div>

<%= form_with(url: login_path, method: :post, class: "space-y-6", data: { turbo: false }) do |f| %>
  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-1">
      <%= f.email_field :email, 
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white text-gray-900 dark:bg-gray-700 dark:text-white sm:text-sm",
          placeholder: "tu@email.com",
          required: true %>
    </div>
  </div>

  <div>
    <%= f.label :password, class: "block text-sm font-medium text-gray-700 dark:text-gray-300" %>
    <div class="mt-1">
      <%= f.password_field :password,
          class: "appearance-none block w-full px-3 py-2 border border-gray-300 dark:border-gray-600 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 bg-white text-gray-900 dark:bg-gray-700 dark:text-white sm:text-sm",
          placeholder: "••••••••",
          required: true %>
    </div>
  </div>

  <%= f.submit "Ingresar",
      class: "cursor-pointer w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-200" %>
<% end %>

<div class="mt-6">
  <div class="relative">
    <div class="absolute inset-0 flex items-center">
      <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
    </div>
    <div class="relative flex justify-center text-sm">
      <span class="px-2 bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-400">
        ¿No tienes una cuenta?
      </span>
    </div>
  </div>

  <div class="mt-6 text-center">
    <%= link_to "Registrarse", signup_path, 
        class: "font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
  </div>
</div> 